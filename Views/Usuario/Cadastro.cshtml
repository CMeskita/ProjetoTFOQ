
@{
    ViewBag.Title = "Cadastro Usuário";
}

<h2>Cadastro Usuário</h2>
<form>
    <div class="form-group row">

        <div class="form-group ">

            <label for="nome">Nome</label>
            <input type="text" id="nome-usuario" class="form-control" MaxLength="20" />
        </div>

        <div class="form-group">

            <label fro="label">Email</label>
            <input type="email" id="email-usuario" class="form-control" MaxLength="20" />
        </div>
        <div class="form-group">

            <label fro="label">Senha</label>
            <input type="password" id="senha-usuario" class="form-control" MaxLength="20" />
        </div>
        <div class="form-group">

            <label fro="label">Confirme Senha</label>
            <input type="password" id="confirme-senha-usuario" class="form-control" MaxLength="20" />
        </div>
    </div>

    <div class="form-group row">
        <button onclick="AddUsuario()" type="button" class="btn btn-primary">Salvar</button>
        <a href="/usuario/index" class="btn btn-primary">Voltar</a>
    </div>
</form>
<script>
    function AddUsuario() {

        var Usuario = new Object();
        Usuario.Nome = $('#nome-usuario').val();
        Usuario.Senha = $('#senha-usuario').val();
        Usuario.Email = $('#email-usuario').val();

        $.ajax({
            type: "POST",
            url: "/usuario/Add",
            data: Usuario,
            dataType: 'json',
            success: function (obj) {
                alert(obj);
                location.href = '/usuario';
            },
            error: function (error) {
                Swal.fire('Problemas ao salvar usuario!', '', 'error')
            }
        });
    }

</script>