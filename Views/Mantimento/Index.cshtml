@Model @model List<ProjetoTfoq.Models.Mantimento>
@{
    ViewBag.Title = "Index Mantimento";
}

<h2>Index</h2>


<table class="table table-striped table-hover">
    <caption>Empresas Cadastradas</caption>
    <thead>
        <tr>
            <td scope="col">Codigo</td>
            <td scope="col">Tipo</td>
            <td scope="col">Validade</td>
            <td scope="col">Capacidade</td>
            <td scope="col">Conteúdo Atual</td>
            <td scope="col">Percentual Disponivel</td>
            <td><a class="success">Detalhes</a></td>
            <td><a class="danger">Alterar</a></td>
            <td><a class="warning">Excluir</a></td>
        </tr>
    </thead>
    <tbody>
        <!-- index vai receber do controle uma lista de empresa e percorrer pela tabelas-->
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Tipo.Nome</td>
            <td>@item.Marca</td>
            <td>@item.Capacidade</td>
            <td>@item.Conteudo</td>
            <td>@item.Precentual</td>
            <td><a href="/Mantimento/Detalhes/@item.Id" class="success">Detalhes</a></td>
            <td><a href="/Mantimento/Alterar/@item.Id" class="danger">Alterar</a></td>

            <td><a onclick="Excluir(@item.Id)" class="btn btn-warning ">Excluir</a></td>
        </tr>
        }

    </tbody>

</table>
<a href="/Mantimento/cadastro/" class="btn btn-primary">Novo Tipo</a>
<script>

    function Excluir(id) {
        $.ajax({
            type: "GET",
            url: "/mantimento/Delete/" + id,

            dataType: 'json',
            success: function (obj) {
                alert(obj);
                location.href = '/mantimento';
            },
            error: function (error) {
                console.log(error)

            }
        });
    }

</script>