
@{
    ViewBag.Title = "Cadastro Tipo";
}



<h2>Cadastro de Tipo de Mantimento</h2>

<form>
    <div class="form-group row">

        <div class="form-group " >

            <label for="nome">Nome</label>
            <input type="text" id="nome" class="form-control" MaxLength="20" />
        </div>

        <div class="form-group">

            <label fro="label">Tags</label>
            <input type="text" id="tags" class="form-control" MaxLength="20" />
        </div>

        <div class="form-check">

            <input type="checkbox" id="repor" class="form-check-input "/>
            <label class="form-check-label">Repor</label>

        </div>

        </div>

        <div class="form-group row">

            <button onclick="Salvar()" type="button" class="btn btn-primary">SalVar</button>



            <a href="/tipo/index" class="btn btn-primary">Voltar</a>


        </div>
</form>
<script>
    function Salvar() {
        var tipo = new Object();
            tipo.Nome = $('#nome').val();
            tipo.Tags = $('#tags').val();
            $('#repor').prop('checked', true);
        $.ajax({
            type: "POST",
            url: "/tipo/Add",
            data: tipo,
            dataType: 'json',
            success: function (obj) {
                alert(obj);
                location.href = '/tipo';
            },
            error: function (error) {

            }
        });
    }

</script>
