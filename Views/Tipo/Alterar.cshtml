@model ProjetoTfoq.Models.Tipo
@{ 
    ViewBag.Title = "Alterar";
}

<h2>Alterar Tipo de Mantimento</h2>
<div class="form-group row">


    <label>Nome</label>
    <input type="text" id="nome" class="form-control" MaxLength="20" value="@Model.NomeTipo" />

    <label>Tags</label>
    <input type="text" id="tags" class="form-control" MaxLength="20" value="@Model.Tags" />

</div>

<div class="form-group row">

    <button onclick="Salvar()" type="button" class="btn btn-primary">SalVar</button>



    <a href="/tipo/index" class="btn btn-primary">Voltar</a>


</div>

<script>
    function Salvar() {
        var tipo = new Object();
        tipo.Id = @Model.Id;
        tipo.NomeTipo = $('#nome').val();
      
        tipo.Tags = $('#tags').val();

        $.ajax({
            type: "POST",
            url: "/tipo/update",
            data: tipo,
            dataType: 'json',
            success: function (obj) {
                alert(obj);
                location.href = '/tipo';
            },
            error: function (error) {

            }
        });
    }

</script>

